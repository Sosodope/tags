class {
  onCreate() {
    this.callCount = 0;
  }
}

<div data-testid="root">
  <context
    data=input.data
    on-increment(function() {
      component.callCount++;
    })>
    <context|{ data }, emit| from=".">
      [receiver content]${data}<button.test-button on-click(emit, "increment")>
        Increment
      </button>
      Count: ${component.callCount}
    </context>
  </context>
</div>
